<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/misp_tilte_with_save_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/bar_input_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/rectangle_corner_transparent"
                android:ems="10"
                android:hint="@string/hint_input_barcode"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/content_font_size" />

            <Button
                android:id="@+id/bar_input_scan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_corner_transparent"
                android:minHeight="24dp"
                android:padding="10dp"
                android:text="@string/btn_or_scan"
                android:textColor="@color/black"
                android:textSize="@dimen/content_font_size_sm" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
